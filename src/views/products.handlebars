<h1>Productos</h1>

<h2>Lista de Productos</h2>
{{!-- <div id="productContainer" class="cards-container">

</div> --}}
<article id="list-products">  
    {{#each productsList}}
    <div class="container">
        <div class="card">
            <div class="imgBx">
                    <img src="{{thumbnail}}" height="310" width="200"/>
            </div>
            <div class="contentBx" id="compra">
                <h2>{{title}}</h2>
                <p>${{price}}</p>
                <p>{{description}}</p>
                <button class="botons" type="button" id="buy" href="#">Comprar</button>
            </div>
        </div>
    </div>
    {{/each}}
</article>

<div class="controller-pagination">
    <button id="prevPage-button"><img src="/assets/arrow-left.svg" alt="arrow left button"></button>
    <input id="inputPage" type="number" value="1">
    <button id="nextPage-button"><img src="/assets/arrow-right.svg" alt="arrow right button"></button>
</div>

